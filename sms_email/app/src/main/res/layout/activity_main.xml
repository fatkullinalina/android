<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/width_3"
        android:layout_height="@dimen/height_1"
        android:layout_marginStart="@dimen/width_1"
        android:layout_marginTop="@dimen/height_2"
        android:layout_marginEnd="@dimen/width_1"
        android:layout_marginBottom="@dimen/height_3"
        android:text="@string/preview"
        android:textSize="@dimen/button_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="@dimen/width_4"
        android:layout_height="@dimen/height_4"
        android:layout_marginStart="@dimen/width_2"
        android:layout_marginTop="@dimen/height_5"
        android:layout_marginEnd="@dimen/width_2"
        android:layout_marginBottom="@dimen/height_6"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/unvisible"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>